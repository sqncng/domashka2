// Вычисляет хэш для плана, который определяется исходя из периода и вида плана.
//
// Параметры:
//  ВидПлана       - СправочникСсылка.ВидыПлана
//  НачалоПериода  -Дата
//  НачалоПериода  -Дата
//
// Возвращаемое значение:
//   Число
//
Функция ХэшВидаПланаИПериода(ВидПлана, НачалоПериода, КонецПериода) Экспорт
	
	Данные = Новый Соответствие();
	Данные.Вставить("ВидПлана",      ВидПлана);
	Данные.Вставить("НачалоПериода", НачалоПериода);
	Данные.Вставить("КонецПериода",  КонецПериода);
	
	ХешированиеДанных = Новый ХешированиеДанных(ХешФункция.CRC32);
	ХешированиеДанных.Добавить(ЗначениеВСтрокуВнутр(Данные));
	
	Возврат ХешированиеДанных.ХешСумма;
	
КонецФункции

